{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "cpp: Launch current file",
        "request": "launch",
        "type": "cppdbg",
        "program": "/tmp/test",
        "MIMode": "gdb",
        "stopOnEntry": true,
        "stopAtEntry":true,
        "miDebuggerPath": "/usr/bin/gdb",
        "cwd":"${cwd}"
      }
    }
  }
}
